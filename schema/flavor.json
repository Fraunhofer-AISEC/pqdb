{
    "$schema": "http://json-schema.org/schema#",
    "$id": "flavor.json#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "comment": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": [
                "KEM",
                "KTM",
                "SIG"
            ]
        },
        "type comment": {
            "type": "string"
        },
        "security notion": {
            "type": "string",
            "enum": [
                "IND-CPA",
                "IND-CCA",
                "EUF-CMA",
                "SUF-CMA"
            ],
            "$comment": "Note to contributors: You're welcome to add more here if needed. IND-CCA == IND-CCA2; SUF == strong unforgeability"
        },
        "security notion comment": {
            "type": "string"
        },
        "dh-ness": {
            "type": "string",
            "$comment": "Refers to properties such as contributiveness. Just add relevant information as free text for now. #TODO"
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "type",
        "security notion"
    ]
}
