{
    "$schema": "http://json-schema.org/schema#",
    "$id": "scheme.json#",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "enc",
                "sig"
            ],
            "$comment": "`enc` stands for all types of key exchange (KEMs etc)"
        },
        "name": {
            "type": "string",
            "$comment": "Human readable name"
        },
        "description": {
            "type": "string",
            "$comment": "One-liner describing the scheme's unique features"
        },
        "comment": {
            "type": "string"
        },
        "category": {
            "type": "string",
            "enum": [
                "lattice",
                "code",
                "multivariate",
                "isogeny",
                "hash",
                "other"
            ]
        },
        "category comment": {
            "type": "string"
        },
        "stateful": {
            "type": "boolean"
        },
        "stateful comment": {
            "type": "string"
        },
        "nist round": {
            "type": "string",
            "enum": [
                "none",
                "1",
                "2",
                "3a",
                "3f",
                "4",
                "S3"
            ],
            "$comment": "`3a`/`3f` for round 3 alternate candidates and finalists, respectively. `none` for schemes that were not submitted to the NIST PQC Standardization Process. `S3` for Standardization after Round3."
        },
        "year": {
            "type": "object",
            "properties": {
                "paper": {
                    "type": "integer"
                },
                "candidate": {
                    "type": "integer"
                },
                "standardization": {
                    "type": "integer"
                },
                "comment": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "minProperties": 1
        },
        "authors": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "minLength": 2
            }
        },
        "problems": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "assumption": {
                        "type": "string",
                        "$comment": "#TODO Convert to enum once we know typical values."
                    },
                    "comment": {
                        "type": "string"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "assumption"
                ]
            }
        },
        "problems comment": {
            "type": "string"
        },
        "trust comment": {
            "type": "string",
            "$comment": "Notes about trustworthyness (existing attacks, cryptanalysis). Just add free text for now."
        },
        "website": {
            "type": "string"
        },
        "links": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "$comment": "Links to additional resources beyond the website. Use `sources` to denote where the data is from."
        },
        "sources": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "patents": {
            "type": "string"
        },
        "patents sources": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "last_updated": {
            "type": "string",
            "format": "date",
            "$comment": "Date when the data entered here was updated last"
        },
        "last_updated comment": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "type",
        "name",
        "category",
        "year",
        "authors",
        "stateful"
    ]
}
