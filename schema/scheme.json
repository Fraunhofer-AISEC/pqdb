{
    "$schema": "http://json-schema.org/schema#",
    "$id": "scheme.json#",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "enc",
                "sig"
            ],
            "$comment": "`enc` stands for all types of key exchange (KEMs etc)"
        },
        "name": {
            "type": "string"
        },
        "comment": {
            "type": "string"
        },
        "category": {
            "type": "string",
            "enum": [
                "lattice",
                "code",
                "multivariate",
                "isogeny",
                "hash"
            ]
                },
                "category comment": {
                    "type": "string"
        },
        "stateful": {
            "type": "boolean"
        },
        "stateful comment": {
            "type": "string"
        },
        "nist round": {
            "type": "integer",
            "minimum": 0,
            "$comment": "0 for schemes that were not submitted to the NIST PQC Standardization Process."
        },
        "year": {
            "type": "object",
            "properties": {
                "paper": {
                    "type": "integer"
                },
                "candidate": {
                    "type": "integer"
                },
                "standardization": {
                    "type": "integer"
                },
                "comment": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "minProperties": 1
        },
        "authors": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "minLength": 2
            }
        },
        "problems": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "assumption": {
                        "type": "string",
                        "$comment": "#TODO Convert to enum once we know typical values."
                    },
                    "comment": {
                        "type": "string"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "assumption"
                ]
            }
        },
        "sources": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "trust comment": {
            "type": "string",
            "$comment": "Notes about trustworthyness (existing attacks, cryptanalysis). Just add free text for now."
        }
    },
    "additionalProperties": false,
    "required": [
        "type",
        "name",
        "category",
        "year",
        "authors",
        "stateful"
    ]
}
