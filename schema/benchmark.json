{
    "definitions": {
        "timing_totalled": {
            "title": "Totalled",
            "type": "object",
            "properties": {
                "total": {
                    "type": "number",
                    "$comment": "Equaling gen+enc+dec. Makes sense in a KEM setting."
                }
            },
            "additionalProperties": false,
            "required": [
                "total"
            ]
        },
        "timing_detailled": {
            "title": "Detailled",
            "type": "object",
            "properties": {
                "gen": {
                    "type": "number"
                },
                "enc|sign": {
                    "type": "number"
                },
                "dec|vrfy": {
                    "type": "number"
                }
            },
            "additionalProperties": false,
            "required": [
                "gen",
                "enc|sign",
                "dec|vrfy"
            ]
        }
    },
    "$schema": "http://json-schema.org/schema#",
    "$id": "benchmark.json#",
    "type": "object",
    "properties": {
        "impl": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$"
        },
        "param": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$"
        },
        "comment": {
            "type": "string"
        },
        "platform": {
            "type": "string",
            "$comment": "#TODO make this reference to platform object. Add OS and Compiler info"
        },
        "timings": {
            "properties": {
                "measurements": {
                    "oneOf": [
                        {
                            "$ref": "#/definitions/timing_detailled"
                        },
                        {
                            "$ref": "#/definitions/timing_totalled"
                        }
                    ]
                },
                "unit": {
                    "type": "string",
                    "enum": [
                        "cycles",
                        "ms"
                    ]
                },
                "comment": {
                    "type": "string"
                }
            },
            "required": [
                "measurements",
                "unit"
            ]
        },
        "memory requirements": {
            "type": "object",
            "properties": {
                "gen": {
                    "type": "integer"
                },
                "enc|sign": {
                    "type": "integer"
                },
                "dec|vrfy": {
                    "type": "integer"
                },
                "comment": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false,
    "required": [
        "impl",
        "param"
    ]
}
