{
    "$schema": "http://json-schema.org/schema#",
    "$id": "benchmark.json#",
    "type": "object",
    "properties": {
        "impl": {
            "type": "string"
        },
        "param": {
            "type": "string"
        },
        "comment": {
            "type": "string"
        },
        "platform": {
            "type": "string",
            "$comment": "#TODO make this reference to platform object. Add OS and Compiler info"
        },
        "timings": {
            "type": "object",
            "properties": {
                "unit": {
                    "type": "string",
                    "enum": [
                        "cycles",
                        "ms"
                    ]
                },
                "gen": {
                    "type": "number"
                },
                "enc|sign": {
                    "type": "number"
                },
                "dec|vrfy": {
                    "type": "number"
                },
                "comment": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "memory requirements": {
            "type": "object",
            "properties": {
                "gen": {
                    "type": "integer"
                },
                "enc|sign": {
                    "type": "integer"
                },
                "dec|vrfy": {
                    "type": "integer"
                },
                "comment": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false,
    "required": [
        "impl",
        "param"
    ]
}
