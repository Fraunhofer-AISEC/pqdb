{
    "$schema": "http://json-schema.org/schema#",
    "$id": "paramset.json#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "comment": {
            "type": "string"
        },
        "security level": {
            "type": "object",
            "properties": {
                "classical": {
                    "type": "integer",
                    "minimum": 1,
                    "$comment": "measured in bits"
                },
                "quantum": {
                    "type": "integer",
                    "minimum": 1,
                    "$comment": "measured in bits"
                },
                "nist category": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 5
                },
                "comment": {
                    "type": "string"
                }
            },
            "required": [
                "classical",
                "quantum"
            ]
        },
        "failure probability": {
            "type": "number",
            "maximum": 0,
            "$comment": "0 for 0, log_2 else"
        },
        "failure probability comment": {
            "type": "string"
        },
        "sizes": {
            "type": "object",
            "$comment": "Measured in bytes.",
            "properties": {
                "sk": {
                    "type": "integer",
                    "minimum": 1
                },
                "pk": {
                    "type": "integer",
                    "minimum": 1
                },
                "msg": {
                    "type": "integer",
                    "minimum": 1,
                    "$comment": "For KEMs, size of the shared secret. #TODO signatures?"
                },
                "ct|sig": {
                    "type": "integer",
                    "minimum": 1
                },
                "comment": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": ["sk", "pk", "ct|sig"]
        },
        "number of operations": {
            "type": "string",
            "$comment": "Use the literal string `inf` if there's no limitation. #TODO We'll allow strings for now and think of a good representation once we know more about the typical values for this."
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "security level",
        "failure probability",
        "number of operations",
        "sizes"
    ]
}
