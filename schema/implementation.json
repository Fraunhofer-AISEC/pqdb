{
    "$schema": "http://json-schema.org/schema#",
    "$id": "implementation.json#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "platform": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": [
                "reference",
                "optimized"
            ]
        },
        "side channel guarding": {
            "type": "object",
            "properties": {
                "branching": {
                    "type": "boolean"
                },
                "timing": {
                    "type": "string"
                },
                "timing_comment": {
                    "type": "string"
                }
            }
        },
        "hardware features": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "dependencies": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "platform"
    ]
}
