{
    "$schema": "http://json-schema.org/schema#",
    "$id": "implementation.json#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "comment": {
            "type": "string"
        },
        "platform": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": [
                "reference",
                "optimized"
            ]
        },
        "side channel guarding": {
            "type": "object",
            "properties": {
                "branching": {
                    "type": "boolean",
                    "$comment": "This is a special case of timing. It means there is no secret-dependent branching on the C level."
                },
                "timing": {
                    "type": "boolean",
                    "$comment": "This refers to any kind of timing, not just branching-related. See also `branching`."
                },
                "branching comment": {
                    "type": "string"
                },
                "timing comment": {
                    "type": "string"
                }
            },
            "$comment": "Note to contributors: Feel free to add more here."
        },
        "hardware features": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "$comment": "#TODO Convert to enum once we know typical values."
        },
        "dependencies": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "$comment": "#TODO Convert to enum once we know typical values."
        },
        "code size": {
            "type": "object",
            "$comment": "in bytes",
            "properties": {
                "overall": {
                    "type": "number",
                    "$comment": "If there is only one implementation for all operations"
                },
                "gen": {
                    "type": "number"
                },
                "enc|sign": {
                    "type": "number"
                },
                "dec|vrfy": {
                    "type": "number"
                },
                "comment": {
                    "type": "string"
                }
            }
        },
        "randomness required": {
            "type": "object",
            "properties": {
                "gen": {
                    "type": "number"
                },
                "enc|sign": {
                    "type": "number"
                },
                "dec|vrfy": {
                    "type": "number"
                },
                "comment": {
                    "type": "string"
                }
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "platform"
    ]
}
